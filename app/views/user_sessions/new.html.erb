<%= simple_form_for @user_session, html: { class: 'form-vertical' } do |f| -%>
  <fieldset>
    <legend>Log In</legend>
    <%= f.input :email, :input_html => { :size => 40 } %>
    <%= f.input :password %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, 'Log in', class: 'btn-primary' %>
    <%= link_to "Help! I forgot my password.", new_password_reset_path %>
  </div>
<% end %>

