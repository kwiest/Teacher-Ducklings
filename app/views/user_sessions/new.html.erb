<h1>Login</h1>

<!--
<img src="/images/icons/lock_48.png" border="0" alt="Secure" />
-->

<% form_for @user_session do |f| -%>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :email, "Email:" %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password, "Password:" %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.submit 'Log in', :class => :login %>
	</p>
<% end -%>

<p><%= link_to "Forgot Your Password?", new_password_reset_path %></p>