<h1>All Posts</h1>

<%= button_to "New Post", new_post_path, :class => :new_post, :method => :get %>

<p>&nbsp;</p>

<% @posts.each do |post| -%>
	<div class="resource-row <%= cycle 'odd', 'even' %>">
			<h4><%= post.title %></h4>
			
		<div class="float-right">
			<br />
			<%= link_to "Show", post, :class => :show %>
			<%= link_to "Edit", edit_post_path(post), :class => :edit %>
			<%= link_to "Delete", post, :confirm => "Are you sure you want to delete this post?", :method => :delete, :class => :delete %>
		</div>
		
		<strong>Author: </strong><%= post.user.full_name %><br />
		<strong>Last Publish Date: </strong><%= time_ago_in_words(post.updated_at) %> ago<br />
		<strong>Comments: </strong><%= pluralize(post.comments.size, 'Comment') %>
	</div>
<% end -%>