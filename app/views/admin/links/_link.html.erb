<div class="resource-row <%= cycle 'odd', 'even' %>">
	<h4><%= link.name %></h4>
	<div style="float: right;">
		<br />
		<%= link_to 'Show', link, :class => 'show' %>
		<%= link_to 'Edit', edit_link_path(link), :class => 'edit' %>
		<%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %>
	</div>
	<strong>Link Url: </strong><%= link_to link.url, link.url %><br />
	<strong>Description: </strong><%= link.description %><br />
	<strong>Document: </strong>
	<% if link.document? -%>
		<%= link_to link.document_file_name, link.document.url %>
	<% else -%>
		No attached file
	<% end -%>
	<div class="clear"></div>
</div>