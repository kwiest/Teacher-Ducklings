<%= f.input :first_name, input_html: { size: 40 } %>
<%= f.input :last_name, input_html: { size: 40 } %>
<%= f.input :phone_number, required: false, input_html: { size: 40 } %>
<%= f.input :email, input_html: { size: 40 } %>
<%= f.input :password, required: false, hint: 'Only update if you want to change your password.' %>
<%= f.input :password_confirmation, required: false %>
<%= f.input :photo, as: :file, required: false %>
<%= f.input :admin, as: :boolean, value: false, label: 'Administrator?', required: false %>
