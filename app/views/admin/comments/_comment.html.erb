<%= div_for comment do -%>
  <div class="pic">
    <%= image_tag comment.user.photo.url(:small) %>
  </div>
	
  <div class="body">
    <p><strong>
      <%= time_ago_in_words(comment.created_at).camelize %>
      ago, <%= comment.user.full_name %> said:
    </strong></p>
    <p><%= comment.body %></p>
  </div>
  <div class="clear"></div>
  
  <div class="delete-comment">
    <%= link_to "Delete comment", admin_post_comment_path(@post, comment), method: :delete,
      confirm: 'Are you sure you want to delete this comment?' %>
  </div>
<% end -%>
